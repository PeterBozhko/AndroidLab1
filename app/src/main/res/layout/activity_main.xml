<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">
        <Button
            android:id="@+id/task_1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/buttons_margin"
            android:text="@string/task_1" />

        <Button
            android:id="@+id/task_2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/buttons_margin"
            android:text="@string/task_2" />

        <Button
            android:id="@+id/task_3_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/buttons_margin"
            android:text="@string/task_3" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/buttons_margin"
            android:textSize="@dimen/big_text_size"
            android:text="@string/zero" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/decrease_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_margin="@dimen/buttons_margin"
                app:srcCompat="@android:drawable/ic_media_play"
                android:rotation="180"
                android:contentDescription="@string/decrease" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/increase_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_margin="@dimen/buttons_margin"
                app:srcCompat="@android:drawable/ic_media_play"
                android:contentDescription="@string/increase" />
        </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>